<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseFragment2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#070F40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ss"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:background="@drawable/chose"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="أذكار الصباح"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/mm"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/chose"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="أذكار المساء"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/tt"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/chose"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="المسبحة"
                android:textColor="@color/white"
                android:textSize="@dimen/_22sdp" />

            <TextView
                android:id="@+id/kk"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/chose"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="رسالة من البرطمان"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/pp"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/chose"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="عطر جمعتك"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/ww"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/chose"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="أذكار أخري"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />
        </LinearLayout>
    </ScrollView>
    <!-- Banner AdView -->
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bannerAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-1956250024752521/9713943530" />
</RelativeLayout>